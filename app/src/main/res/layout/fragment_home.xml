<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black">

        <!-- Shimmer for Carousel -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerCarousel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            app:shimmer_auto_start="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <include layout="@layout/item_carousel_shimmer"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"/>

                <include layout="@layout/item_carousel_shimmer"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"/>

                <include layout="@layout/item_carousel_shimmer"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Actual Carousel -->
        <TextView
            android:id="@+id/carouselTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Latest Stories"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/carouselViewPager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <!-- Shimmer for Story List -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerStoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:shimmer_auto_start="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_story_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"/>

                <include layout="@layout/item_story_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"/>

                <include layout="@layout/item_story_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"/>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Actual Story List -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/orange"
            app:tabTextColor="@android:color/white"
            app:tabSelectedTextColor="@color/orange"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/storiesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"/>

        <TextView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No stories found"
            android:textColor="@android:color/white"
            android:visibility="gone"/>
    </LinearLayout>
</layout>